{
    "$schema-template": "2.0.0",
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "runtime": {
            "type": "docker",
            "settings": {
              "minDockerVersion": "v1.25",
              "loggingOptions": "",
              "registryCredentials": {
                "iotstuff": {
                  "username": "$CONTAINER_REGISTRY_USERNAME",
                  "password": "$CONTAINER_REGISTRY_PASSWORD",
                  "address": "$CONTAINER_REGISTRY_ADDRESS"
                }
              }
            }
          },
          "systemModules": {
            "edgeAgent": {
              "type": "docker",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                "createOptions": {}
              }
            },
            "edgeHub": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                "createOptions": {
                  "HostConfig": {
                    "PortBindings": {
                      "5671/tcp": [
                        {
                          "HostPort": "5671"
                        }
                      ],
                      "8883/tcp": [
                        {
                          "HostPort": "8883"
                        }
                      ],
                      "443/tcp": [
                        {
                          "HostPort": "443"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "modules": {
            "Sensors": {
              "version": "1.001",
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "iotstuff.azurecr.io/sensors:latest",
                "createOptions": {
                  "HostConfig":{
                    "Privileged":true
                  }
                }
              }
            }
          }
        }
      },
      "$edgeHub": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "routes": { },
          "storeAndForwardConfiguration": {
            "timeToLiveSecs": 7200
          }
        }
      }
    }
  }